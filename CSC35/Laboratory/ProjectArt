NewSeason:
     cmpq Seasons, 1                               # If Season == 1 : jump to Spring
     je Spring
     cmpq Seasons, 2                               # If Season == 2 : jump to Summer
     je Summer
     cmpq Seasons, 3                               # If Season == 3 : jump to Fall
     je Fall
     cmpq Seasons, 4                               # If Season == 4 : jump to Winter
     je Winter
     movq Seasons, 1                               # Otherwise, set Season to 1
     jmp CheckSeason                               # Loop back to CheckSeason

Spring:
     lea rcx, SpringTime                           # Prompt the Spring time
     call PrintStringZ
     ret
Summer:
     lea rcx, SummerTime                           # Prompt the Summer time
     call PrintStringZ
     ret
Fall:
     lea rcx, FallTime                             # Prompt the Fall time
     call PrintStringZ
     ret
Winter:
     lea rcx, WinterTime                           # Prompt the Winter time
     call PrintStringZ
     ret

