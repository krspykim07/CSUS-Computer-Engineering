     cmpq Option, 1                                # If Option == 1 : Go to GuideFarm
     je GuideFarm
     cmpq Option, 2                                # If Option == 2 : Go to GuideMine
     je GuideMine
     cmpq Option, 3                                # If Option == 3 : Go to GuideTown
     je GuideTown
     cmpq Option, 4                                # If Option == 4 : Go to GuideEnergyHungerLevel
     je GuideEnergyHungerLevel
     cmpq Option, 5                                # If Option == 5 : Go to GuideLives
     je GuideLives
     cmpq Option, 6                                # If Option == 6 : Go to ReturnInstructions
     je Returning
     jmp Instructions                              # Loop to Instructions

    GuideFarm:
        lea rcx, GuideFarmingMessage               # Prompt Farm Instruction
        call PrintStringZ
        call LowerBrick1

        call PausingSection                        # Call to pause the screen 
        jmp Instructions

    GuideMine:
        call LowerBrick1

        call PausingSection                        # Call to pause the screen 
        jmp Instructions

    GuideTown:
        lea rcx, GuideTownMessage                  # Prompt Town Instruction
        call PrintStringZ
        call LowerBrick1
        
        call PausingSection                        # Call to pause the screen 
        jmp Instructions

    GuideEnergyHungerLevel:
        lea rcx, GuideEnergyHungerMessage          # Prompt Energy and Hunger Instruction
        call PrintStringZ
        call LowerBrick1
        
        call PausingSection                        # Call to pause the screen 
        jmp Instructions

    GuideLives:
        lea rcx, GuideLivesMessage                 # Prompt Lives Instruction
        call PrintStringZ
        call LowerBrick1

        call PausingSection                        # Call to pause the screen 
        jmp Instructions